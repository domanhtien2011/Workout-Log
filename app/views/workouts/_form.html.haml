= simple_form_for(@workout, html: { class: 'form-horizontal' }) do |f|
  = f.input :date, label: "Date", input_html: { class: 'form-control' }
  = f.input :workout, label: "Which body part did you train?", input_html: { class: 'form-control' }
  = f.input :mood, label: "How were you feeling?", input_html: { class: 'form-control' }
  = f.input :length, label: "How long?", input_html: { class: 'form-control' }
  = f.button :submit

= link_to("Home", root_url)
